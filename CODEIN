            print ("\t3 - Consultar planilla")
            print ("\t4 - Eliminar planilla")
            print ("\t5 - Alertas planilla")
            print ("\t6 - Salir")

    elif opcion == "4":
        #Modulo Informes
            print ("\tSeleccione una opción: ")
            print ("\t1 - Verificar conteo de inventario")
            print ("\t2 - Porcentaje de conteos realizados")
            print ("\t3 - Consolidación de conteos")
            print ("\t4 - Reporte final de conteos")
            print ("\t5 - Salir")

    elif opcion1 == "5":
        break
         
    else:
        print ("opcion incorrecta")
